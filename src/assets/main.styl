body 
  min-height 100vh
  color #ffffff
  background #181818
  transition
    color 0.5s,
    background-color 0.5s
  font-family:
    'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
  font-size 15px
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale


#app 
  max-width 1280px
  margin 0 auto
  padding 2rem

  font-weight normal
